try:
    predicateX = int(input('Введите предикату X '))
    predicateY = int(input('Введите предикату Y '))
    predicateZ = int(input('Введите предикату Z '))
    if 0 <= predicateX <= 1 and 0 <= predicateY <= 1 and 0 <= predicateZ <= 1:
        print('утверждение истинно ')
    else:
        print('значения предикат должны быть 0 или 1 ')
except:
    print('Программа будет работать только при вводе цифр цифрами ')
